pipeline { 
    agent any

    parameters {
        booleanParam(name: "DEV", defaultValue: "TRUE", description: "This is a demo")
        booleanParam(name: "TEST", defaultValue: "TRUE", description: "This is a demo")
        booleanParam(name: "BUILD", defaultValue: "TRUE", description: "This is a demo")
    }

    stages{

        stage('Dev'){
            when{
                expression{
                    params.DEV==TRUE
                }
            }


            steps{
            echo "DEV"
        }
        
        }

        stage("Test"){

            when{
                expression{
                    params.TEST==TRUE
                }
            }

             steps{
                
            sh'''
            sleep 5
            echo "Test"
            '''
            
        }
        }

        stage("Build"){

            when{
                expression{
                    params.BUILD==TRUE
                }
            }

            steps{
            echo "BUILD"
        }
        }
    
    
    }


}